@import "normalize.css";

@import url(https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500italic,500,700,700italic,900,900italic&subset=latin,cyrillic);
@import url(https://fonts.googleapis.com/css?family=Maven+Pro:400,500,700,900);

html {
  box-sizing: border-box;
  font-size: 62.5%;
  height: 100%;
}

body {
  height: 100%;
  font-size: 1.6rem;
  min-width: 32rem;
}

*, *:before, *:after {
  box-sizing: inherit;
}

:global(#app) {
  height: 100%;
}
